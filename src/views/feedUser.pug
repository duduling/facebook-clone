extends ./layouts/main.pug

block content
    .feed-user
        .feed-user__wrapper
            h1.ir_su Feed User
            section.feed-user__info
                article.feed-user__info--backgroud-img(style=`background-image: url(${otherUser.cover});`)
                    .feed-user__info--backgroud-effect
                        img(src=otherUser.profile, alt="user profile")
                        span=otherUser.name
                        if user.idx !== otherUser.idx
                            button#jsAddFriend
                                if friendBoolean
                                    i.fas.fa-check#jsAddFriendText  My friend
                                else if waitFriend
                                    i.fas.fa-user-plus#jsAddFriendText  Wait response
                                else
                                    i.fas.fa-user-plus#jsAddFriendText  Add Friend
                        else
                            button#jsAddFriend(style="visibility: hidden")
                nav.feed-user__info-subNav
                    h4=`${otherUser.name}님의 타임라인`
                    if user.idx === otherUser.idx
                        a(href=`/user${routes.editPassword}`) Edit Password
                        a(href=`/user${routes.editProfile}`) Edit Profile
            section.feed-user__grid-layout
                #jsFakeDivBox
                aside.feed-user__gridLayout-aside
                    .feed__gridLayout-aside-wrap
                        h3.ir_su aside
                        include ./partials/asideFriends
                        include ./partials/asideAd
                        span Facebook &copy; #{new Date().getFullYear()}
                section.feed-user__feed
                    h3.ir_su feed
                    section.feed-main__upload
                        include ./partials/feedUpload
                    section#feedSection(value=0)
                        include ./partials/feedSection