extends ./layouts/main.pug

block content
    .homePage__background
        .homePage__container
            section.homePage__info
                p Facebook에서 전세계에 있는 친구, 가족, 지인들과 함께 이야기를 나눠보세요.
                img(src="/img/loginHome.png", alt="communication")
            section.homePage__join
                article.homePage__join-boxTitle
                    h4 가입하기
                    h5 항상 지금처럼 무료로 즐기실 수 있습니다.
                article.homePage__join-form
                    form(action=routes.join, method="post")
                        input(type="text", name="userName", aria-="name", placeholder="이름", required="true", autocomplete="off")
                        input(type="email", name="email", aria-="email" placeholder="이메일", required="true", autocomplete="off")#jsEmail
                        input(type="password", name="password", aria-="password", id="jsPassword" placeholder="비밀번호", required="true", minlength="6", maxlength="16")
                        input(type="password", name="password1", aria-="password", id="jsPassword1" placeholder="비밀번호 확인", required="true", minlength="6", maxlength="16")
                        label(for="joinFormBirth") 생일
                        #joinFormBirth
                            select(name="birthYear")#jsbirthYear
                            span 년
                            select(name="birthMonth")#jsbirthMonth
                            span 월
                            select(name="birthDay")#jsbirthDay
                            span 일
                        #joinFormSex
                            input(type="radio", name="sex", value="남성", checked)
                            |남성
                            input(type="radio", name="sex", value="여성")
                            |여성
                        p#joinFormTerms 가입하기 버튼을 클릭하면 Facebook의 약관, 데이터 정책 및 쿠키 정책에 동의하게 됩니다. Facebook으로부터 SMS 알림을 받을 수 있으며 알림은 언제든지 옵트 아웃할 수 있습니다.
                        input(type="submit",id="homePage__join-form--btn", value="가입하기")