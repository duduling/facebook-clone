mixin randomFriendBlock(ramdomUser = {})
    .feed-main__aside-users--block(id=`jsRandomFriendBlock${ramdomUser.idx}`)
        a(href=`/feeds/${ramdomUser.idx}`)
            img(src=ramdomUser.profile, alt="user profile")
        .feed-main__aside-users--block-link
            a(href=`/feeds/${ramdomUser.idx}`)=ramdomUser.name
            .feed-main__aside-users--block-link-btn
                button(id=`jsRandomFriendAdd${ramdomUser.idx}`)
                    i.fas.fa-user-plus  Add
                button(id=`jsRandomFriendRemove${ramdomUser.idx}`)
                    i.fas.fa-minus-circle  Remove