            .editProfile-form-profile-inputs
                .editProfile-form-profile-inputs--coverImg
                    label(for="editProfileFile") Cover Image
                    input(type="file", name="profile", id="editProfileFile")
                .editProfile-form-profile-inputs--profileImg
                    label(for="editCoverFile") Profile Image
                    input(type="file", name="cover", id="editCoverFile")
                .editProfile-form-profile-inputs--submit
                    input(type="submit", value="Edit Profile")