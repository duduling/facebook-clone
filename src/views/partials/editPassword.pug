                    label(for="changePwOld") Current Password
                    input(type="password", name="changePwOld" ,id="changePwOld", placeholder="8 ~ 16자")
                .editPassword-form-password-inputs--newPassword
                    label(for="changePwOld") New Password
                    input(type="password", name="changePwOld" ,id="changePwOld", placeholder="8 ~ 16자")
                .editPassword-form-password-inputs--newPasswordRe
                    label(for="changePwOld") Confirm New Password
                    input(type="password", name="changePwOld" ,id="changePwOld", placeholder="8 ~ 16자")
                .editPassword-form-password-inputs--submit
                    input(type="submit", value="Edit Password")